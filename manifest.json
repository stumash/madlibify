{
  "manifest_version": 2,
  "name": "madlibify",
  "description": "Replace words on any webpage with nouns, adjectives, verbs, and adverbs or your choosing.  How funny can you be?",
  "version": "0.0.1",
  "default_locale": "en",
  "author": "Josh Abravanel, David Huculak, Peter Granitski, Stuart Mashaal",

  "browser_action": {
    "default_icon": "madlib.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["bootstrapper.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "jquery-3.3.1.min.js", "content.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
