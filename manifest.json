{
  "manifest_version": 2,
  "name": "madlibify",
  "description": "A new twist on an old game!  Replace words on any webpage with nouns, adjectives, verbs, and adverbs or your choosing.  How funny can you be?",

  "version": "0.0.1",
  "default_locale": "en",
  "author": "Josh Abravanel, David Huculak, Peter Granitski, Stuart Mashaal",

  "background": {
      "scripts": ["libs/jquery-3.3.1.min.js", "libs/dexie.min.js", "background/background.js"],
      "persistent": false
  },

  "browser_action": {
    "default_icon": "img/madlib.png",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "libs/jquery-3.3.1.min.js", "content/content.js"
      ],
      "css" : ["content/content.css"]
    }
  ],
  "options_page": "options/options.html",

  "web_accessible_resources": [
    "content/wordsetDialog.html"
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ]
}
